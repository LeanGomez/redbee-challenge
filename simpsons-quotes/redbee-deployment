apiVersion: apps/v1
kind: Deployment
metadata:
  name: api-deployment
  labels:
    app: api
spec:
  selector:
    matchLabels:
      app: api
  template:
    metadata:
      labels:
        app: api
    spec:
      containers:
        - name: api
          image: ldgomez97/simpsons-quotes:0.1.3
          imagePullPolicy: IfNotPresent
          env:
            - name: DB_HOST
              value: "redbee-mysql"
            - name: DB_PORT
              value: "3306"
            - name: DB_USER
              value: root
            - name: DB_PASS
              valueFrom:
                secretKeyRef:
                   name: sql-password
                   key: password
          resources:
            limits:
              memory: "128Mi"
              cpu: "500m"
          ports:
            - containerPort: 80

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mysql
spec:
  selector:
    matchLabels:
      app: mysql
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: mysql
    spec:
      containers:
        - image: mysql
          name: mysql
          env:
            - name: MYSQL_ROOT_PASSWORD
              valueFrom:
                secretKeyRef:
                   name: sql-password
                   key: password
          ports:
            - containerPort: 3306
              name: mysql
          volumeMounts:
            - name: pv
              mountPath: "/var/lib/mysql"
      volumes:
        - name: pv
          persistentVolumeClaim:
            claimName: pv-claim
---

apiVersion: v1
kind: Service
metadata:
  name: mysql
spec:
  ports:
    - port: 3306
  selector:
    app: mysql

---

apiVersion: v1
kind: Service
metadata:
  name: api
spec:
  ports:
    - port: 80
  selector:
    app: api
